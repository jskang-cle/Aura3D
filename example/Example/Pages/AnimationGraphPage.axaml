<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:a="https://sunce.tech/aura3d"
             xmlns:vm="clr-namespace:Example.ViewModels"
             x:DataType="vm:AnimationGraphViewModel"
             x:Class="Example.Pages.AnimationGraphPage">
   <DockPanel>
		<ScrollViewer  DockPanel.Dock="Right">
			 <StackPanel> 
                 <Border  Theme="{StaticResource CardBorder}" Padding="8" >
                    <StackPanel Width="200">
                         <TextBlock FontSize="15" FontWeight="Bold" Foreground="{DynamicResource SemiGrey10}" Text="Speed" />
                        <Slider  Maximum="600" Minimum="0" Value="{Binding Speed}"></Slider>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

      
        <Border  Theme="{StaticResource CardBorder}" Padding="8">
            <a:Aura3DView x:Name="aura3Dview" SceneInitialized="aura3Dview_SceneInitialized">
				
            </a:Aura3DView>
        </Border>
  </DockPanel>
</UserControl>
