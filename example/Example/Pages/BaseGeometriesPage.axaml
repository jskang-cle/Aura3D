<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             xmlns:a="https://sunce.tech/aura3d"
             x:Class="Example.Pages.BaseGeometriesPage">
     <DockPanel>
		 <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            
             <Button Margin="10" Content="Box" Click="Button_Click"></Button>

            <Button Margin="10" Content="Sphere" Click="Button_Click"></Button>

            <Button Margin="10" Content="Cylinder" Click="Button_Click"></Button>

            <Button Margin="10" Content="Plane" Click="Button_Click"></Button>
         </StackPanel>    

         <a:Aura3DView SceneInitialized="Aura3DView_SceneInitialized" SceneUpdated="Aura3DView_SceneUpdated"></a:Aura3DView>

     </DockPanel>
</UserControl>
